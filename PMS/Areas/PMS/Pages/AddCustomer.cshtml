@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, LazZiya.ExpressLocalization
@model PMS.Areas.PMS.AddCustomerModel
@{
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h5 localize-content>Property Management System</h5>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/" localize-content>Property Management</a></li>
                    <li class="breadcrumb-item active" localize-content>Add Customer</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header bg-gradient-gray border-transparent">
                        <h3 class="card-title" localize-content>Add Customer</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- general form elements -->
                        <div style="margin: -21px;margin-bottom: -30px;">
                            <div class="box-table">
                                <form method="post" id="inputForm" asp-page="AddCustomer" enctype="multipart/form-data">
                                    <input type="hidden" class="form-control" id="inputCheck" name="inputCheck" value="@Model.Common.CivilId">
                                    <div class="box-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Select Governorate</label>
                                                    <select class="form-control" onchange="loadArea();" required name="governorateId" id="governorateId" asp-items="@Model.Governorate">
                                                        <option value="">--Select Governorate--</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Select Area</label>
                                                    <select class="form-control  select2" required name="areaId" id="areaId">
                                                        <option value="">--Select Area--</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Nationality</label>
                                                    <select class="form-control  select2" required name="countryId" id="countryId" asp-items="@Model.Country">
                                                        <option value="">--Select Country--</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Address</label>
                                                    <input type="text" value="@Model.Common.address" class="form-control" required id="address" name="address" placeholder="Enter Address...">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Full Name</label>
                                                    <input type="text" value="@Model.Common.fname" class="form-control" required id="fname" name="fname" placeholder="Full Name">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                        </div>
                                                        <input type="email" value="@Model.Common.email" id="email" required name="email" class="form-control" placeholder="Email">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Mobile</label>
                                                    <input type="number" value="@Model.Common.mobile" class="form-control" required id="mobile" name="mobile" placeholder="Mobile Number">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Civil Id</label>
                                                    @if (Model.Common.CivilId != 0)
                                                    {
                                                        <input type="number" value="@Model.Common.CivilId" class="form-control" required id="civilId" name="civilId" placeholder="civilId Number">
                                                    }
                                                    else
                                                    {
                                                        <input type="number" class="form-control" required id="civilId" name="civilId" placeholder="civilId Number">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Passport No</label>
                                                    <input type="text" value="@Model.Common.passNo" class="form-control" style="text-transform:uppercase" required id="passNo" name="passNo" placeholder="Passport No">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Upload Passport</label>
                                                    <div class="input-group">
                                                        <div class="custom-file">
                                                            <input type="file" id="pasPhoto" required name="pasPhoto" accept="image/*" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Upload Civil ID</label>
                                                    <div class="input-group">
                                                        <div class="custom-file">
                                                            <input type="file" id="pasPhoto" required name="pasPhoto" accept="image/*" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card-footer">
                                            <button type="submit" id="submit" class="btn btn-success formSearch">@(Model.Common.address != null ? "Update" : "Add")</button>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-sm-12">
                <div class="box-table">
                    <div class="ajax-loader">
                        <img src="/img/loader.gif" class="img-responsive" />
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body" style="margin:-1px">
                        <table class="table table-striped display" style="width:100%" id="customerList">
                            <thead>
                                <tr>

                                    <th>ID</th>
                                    <th>ACTION</th>
                                    <th>Governorate</th>
                                    <th>Area</th>
                                    <th>Nationality</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Civil ID</th>
                                    <th>Passport No</th>
                                    <th>Address</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script type="text/javascript">

        if (@Model.Common.areaId) { $("#governorateId ").val(@Model.Common.govId); loadArea(); }

        function loadArea() {
            var selectedGovernorate = $('#governorateId :selected').val();
            var areaSelect = $('#areaId');
            areaSelect.empty();
            if (selectedGovernorate != null && selectedGovernorate != 0) {
                $.ajax({
                    type: "GET",
                    data: { governorateId: selectedGovernorate },
                    url: "?handler=AddressAreas",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    contentType: "json; charset=utf-8",
                    success: function (addressAreas) {
                        if (addressAreas != null && !jQuery.isEmptyObject(addressAreas)) {
                            areaSelect.append($('<option/>', {
                                value: '',
                                text: "--Select Area--"
                            }));
                            $.each(addressAreas, function (index, area) {
                                if (area.value == @Model.Common.areaId) {
                                    areaSelect.append("<option selected value='" + area.value + "'>" + area.text + "</option>");
                                } else { areaSelect.append("<option value='" + area.value + "'>" + area.text + "</option>"); }

                            });
                        };
                    },
                    failure: function (response) {
                        alert(response);
                    }
                });
            }
        }
        // ----- Validation -----
        $(function () {
            $.validator.setDefaults({
                submitHandler: function () {
                    $("#submit").attr("disabled", true);
                    $("#submit").html("Submitting... please wait.");
                    $("#inputForm").submit();

                }
            });
            $('#inputForm').validate({
                rules: {

                    governorateId: {
                        required: true
                    },
                },
                messages: {

                    governorateId: "Please select Governorate"
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });

        $(document).ready(function () {
             $('.select2').select2();
            loadDataTable();
        });
         $('#pasPhoto').change(function () {

                var fp = $("#pasPhoto");
                var lg = fp[0].files.length; // get length
                var items = fp[0].files;
                var fileSize = 0;
                if (lg > 0) {
                    for (var i = 0; i < lg; i++) {
                        fileSize = fileSize + items[i].size; // get file size
                    }
                    if (fileSize > 2097152) {
                        alert('Files size must not be more than 2 MB');
                        $('#pasPhoto').val('');
                    }
                }
            });
        // _________  LOAD DATA TABLE BUILDING_____________
        function loadDataTable() {

            $('#customerList').DataTable({
                destroy: true,
                dom: 'Bfrtip',
                "bSort": true, "responsive": true, "lengthChange": true, "autoWidth": false,
                "language": {
                    "paginate": {
                        "previous": "<< ",
                        "next": " >>"
                    }
                },
                fixedHeader: {
                    header: true
                },
                 order: [[0, 'desc']],
                "ajax": {
                    type: "GET",
                    beforeSend: function () {
                        $('.ajax-loader').css("visibility", "visible");
                    },
                    url: "?handler=LoadData",
                    dataType: "json",
                    data: {  },
                    complete: function () {
                        $('.ajax-loader').css("visibility", "hidden");
                    },
                    dataSrc: ''
                },
                "columns": [

                    { "data": "customerId" },
                    {
                        "data": "customerId",
                        "mRender": function (data, type, full) {
                            return '<a class="btn btn-info btn-sm" href=/PMS/AddCustomer?customerId=' + data + '>' + 'Edit' + '</a>';
                        }
                    },
                    { "data": "governorate" },
                    { "data": "area" },
                    { "data": "nationality" },
                    { "data": "fullName" },
                    { "data": "email" },
                    { "data": "mobile" },
                    { "data": "civilId" },
                    { "data": "passportNo" },
                    {
                        "data": "address",
                        "render": function (data, type, row) {
                            return "<textarea  disabled class='form-control' style='text-align:justify;padding: 0.4rem;'>" + data + "</textarea>";
                        }
                    }
                ]
            });
        }
    </script>
}